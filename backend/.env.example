# ðŸ§  Senna Wallet Environment Template
# Copy this to .env and fill with your actual values

# Application Settings
DEBUG=true
API_HOST=0.0.0.0
API_PORT=8000

# Somnia Blockchain Settings
SOMNIA_RPC_URL=https://dream-rpc.somnia.network/
SOMNIA_CHAIN_ID=50312
SOMNIA_SYMBOL=STT
SOMNIA_EXPLORER_URL=https://shannon-explorer.somnia.network/

# AI/ML Settings (Required)
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1
DEEPSEEK_MODEL=deepseek-chat
AI_TEMPERATURE=0.1
AI_MAX_TOKENS=500

# Payment & External APIs (Optional)
STRIPE_API_KEY=your_stripe_api_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# Security Settings
SECRET_KEY=generate_secure_random_key_here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database & Storage
DATABASE_URL=sqlite:///./senna_wallet.db

# Logging
LOG_LEVEL=INFO

# Feature Flags
FEATURE_STRIPE_PAYMENTS=false
FEATURE_AI_PRICE_RECOMMENDATIONS=true
FEATURE_SMART_CONTRACTS=false

# Gas & Transaction Settings
DEFAULT_GAS_LIMIT=21000
MAX_GAS_PRICE_GWEI=100
TRANSACTION_TIMEOUT=300

# Cache Settings
REDIS_URL=redis://localhost:6379
CACHE_TTL=300

# Environment
ENVIRONMENT=development