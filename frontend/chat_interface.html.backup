<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Senna Wallet - AI Chat</title>
    <link rel="stylesheet" href="styles.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <div class="chat-app-container">
        <!-- Header -->
        <header class="chat-header">
            <div class="header-left">
                <div class="logo">
                    <img src="assets/logo.png" alt="Senna Wallet" class="logo-img">
                    <span class="logo-text">Senna Wallet</span>
                </div>
                <div class="network-indicator">
                    <i class="fas fa-circle network-status"></i>
                    <span>Somnia Testnet</span>
                </div>
            </div>
            
            <div class="header-center">
                <div class="wallet-info">
                    <div class="wallet-address" id="walletAddressDisplay">
                        <i class="fas fa-wallet"></i>
                        <span id="currentWalletAddress">0x742d...1a3f</span>
                    </div>
                    <div class="wallet-balance" id="walletBalanceDisplay">
                        <span class="balance-amount">15.75</span>
                        <span class="balance-currency">STT</span>
                    </div>
                </div>
            </div>

            <div class="header-right">
                <button class="btn btn-outline btn-small" id="disconnectBtn">
                    <i class="fas fa-sign-out-alt"></i>
                    Disconnect
                </button>
                <button class="btn btn-secondary btn-small" id="backToLandingBtn">
                    <i class="fas fa-home"></i>
                    Home
                </button>
            </div>
        </header>

        <!-- Main Content -->
        <main class="chat-main">
            <!-- Sidebar -->
            <aside class="chat-sidebar">
                <!-- Quick Actions -->
                <div class="sidebar-section">
                    <h3 class="sidebar-title">Quick Actions</h3>
                    <div class="quick-actions">
                        <button class="quick-action-btn" data-action="balance">
                            <div class="action-icon">
                                <i class="fas fa-wallet"></i>
                            </div>
                            <span>Check Balance</span>
                        </button>
                        <button class="quick-action-btn" data-action="send">
                            <div class="action-icon">
                                <i class="fas fa-paper-plane"></i>
                            </div>
                            <span>Send Crypto</span>
                        </button>
                        <button class="quick-action-btn" data-action="receive">
                            <div class="action-icon">
                                <i class="fas fa-qrcode"></i>
                            </div>
                            <span>Receive Funds</span>
                        </button>
                        <button class="quick-action-btn" data-action="price">
                            <div class="action-icon">
                                <i class="fas fa-chart-line"></i>
                            </div>
                            <span>Check Prices</span>
                        </button>
                        <button class="quick-action-btn" data-action="swap">
                            <div class="action-icon">
                                <i class="fas fa-exchange-alt"></i>
                            </div>
                            <span>Swap Tokens</span>
                        </button>
                        <button class="quick-action-btn" data-action="help">
                            <div class="action-icon">
                                <i class="fas fa-question-circle"></i>
                            </div>
                            <span>Get Help</span>
                        </button>
                    </div>
                </div>

                <!-- Recent Transactions -->
                <div class="sidebar-section">
                    <div class="section-header">
                        <h3 class="sidebar-title">Recent Transactions</h3>
                        <button class="view-all-btn" id="viewAllTransactions">View All</button>
                    </div>
                    <div class="transactions-list" id="transactionsList">
                        <div class="transaction-item success">
                            <div class="transaction-icon">
                                <i class="fas fa-arrow-up"></i>
                            </div>
                            <div class="transaction-details">
                                <div class="transaction-amount">+10.5 STT</div>
                                <div class="transaction-meta">From: 0x8a3f...c2d1</div>
                                <div class="transaction-time">2 hours ago</div>
                            </div>
                        </div>
                        <div class="transaction-item sent">
                            <div class="transaction-icon">
                                <i class="fas fa-arrow-down"></i>
                            </div>
                            <div class="transaction-details">
                                <div class="transaction-amount">-5.25 STT</div>
                                <div class="transaction-meta">To: 0x1b4e...9a2f</div>
                                <div class="transaction-time">5 hours ago</div>
                            </div>
                        </div>
                        <div class="transaction-item pending">
                            <div class="transaction-icon">
                                <i class="fas fa-clock"></i>
                            </div>
                            <div class="transaction-details">
                                <div class="transaction-amount">-2.0 STT</div>
                                <div class="transaction-meta">To: 0x3c7d...8b1e</div>
                                <div class="transaction-time">Pending</div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Market Data -->
                <div class="sidebar-section">
                    <h3 class="sidebar-title">Market Data</h3>
                    <div class="market-data">
                        <div class="market-item">
                            <div class="market-label">
                                <span>SOMI Price</span>
                                <i class="fas fa-info-circle" title="Somnia Main Token"></i>
                            </div>
                            <div class="market-value">$0.254</div>
                            <div class="market-change positive">+2.3%</div>
                        </div>
                        <div class="market-item">
                            <div class="market-label">
                                <span>STT Price</span>
                                <i class="fas fa-info-circle" title="Somnia Test Token"></i>
                            </div>
                            <div class="market-value">$0.125</div>
                            <div class="market-change positive">+1.8%</div>
                        </div>
                        <div class="market-item">
                            <div class="market-label">
                                <span>24h Volume</span>
                            </div>
                            <div class="market-value">$2.4M</div>
                            <div class="market-change neutral">-</div>
                        </div>
                        <div class="market-item">
                            <div class="market-label">
                                <span>Gas Price</span>
                            </div>
                            <div class="market-value">15 Gwei</div>
                            <div class="market-change negative">+5.2%</div>
                        </div>
                    </div>
                </div>
            </aside>

            <!-- Chat Area -->
            <section class="chat-area">
                <!-- Chat Header -->
                <div class="chat-area-header">
                    <div class="ai-agent-info">
                        <div class="ai-avatar">
                            <img src="assets/logo.png" alt="Senna AI" class="avatar-img">
                        </div>
                        <div class="ai-details">
                            <h2>Senna AI Assistant</h2>
                            <p>Your personal crypto wallet agent - Always online</p>
                        </div>
                    </div>
                    <div class="chat-actions">
                        <button class="icon-btn" id="clearChatBtn" title="Clear Chat">
                            <i class="fas fa-trash"></i>
                        </button>
                        <button class="icon-btn" id="exportChatBtn" title="Export Chat">
                            <i class="fas fa-download"></i>
                        </button>
                        <button class="icon-btn" id="settingsBtn" title="Settings">
                            <i class="fas fa-cog"></i>
                        </button>
                    </div>
                </div>

                <!-- Chat Messages -->
                <div class="chat-messages" id="chatMessages">
                    <!-- Welcome Message -->
                    <div class="message ai-message">
                        <div class="message-avatar">
                            <img src="assets/logo.png" alt="Senna AI" class="avatar-img">
                        </div>
                        <div class="message-content">
                            <div class="message-bubble">
                                <h4>ðŸ¤– Welcome to Senna Wallet!</h4>
                                <p>I'm your AI-powered wallet assistant for Somnia Blockchain. You can talk to me naturally to manage your crypto!</p>
                                <div class="quick-examples">
                                    <p><strong>Try saying:</strong></p>
                                    <ul>
                                        <li>"Show my balance"</li>
                                        <li>"Send 10 STT to 0x..."</li>
                                        <li>"What's the SOMI price today?"</li>
                                        <li>"Create a new wallet for me"</li>
                                        <li>"I want to buy 100 USD worth of SOMI"</li>
                                    </ul>
                                </div>
                                <p>Just type what you want to do below! ðŸ‘‡</p>
                            </div>
                            <div class="message-time">Just now</div>
                        </div>
                    </div>

                    <!-- Example User Message -->
                    <div class="message user-message">
                        <div class="message-content">
                            <div class="message-bubble">
                                <p>Show my current balance</p>
                            </div>
                            <div class="message-time">2:30 PM</div>
                        </div>
                        <div class="message-avatar">
                            <img src="assets/logo.png" alt="User" class="avatar-img">
                        </div>
                    </div>

                    <!-- Example AI Response -->
                    <div class="message ai-message">
                        <div class="message-avatar">
                            <img src="assets/logo.png" alt="Senna AI" class="avatar-img">
                        </div>
                        <div class="message-content">
                            <div class="message-bubble">
                                <p>Your current balance is:</p>
                                <div class="balance-display">
                                    <div class="token-balance">
                                        <span class="token-amount">15.75</span>
                                        <span class="token-symbol">STT</span>
                                        <span class="token-value">($1.97)</span>
                                    </div>
                                    <div class="token-balance">
                                        <span class="token-amount">0.85</span>
                                        <span class="token-symbol">SOMI</span>
                                        <span class="token-value">($0.22)</span>
                                    </div>
                                </div>
                                <p>Total portfolio value: <strong>$2.19</strong></p>
                            </div>
                            <div class="message-time">2:31 PM</div>
                        </div>
                    </div>

                    <!-- Example User Message 2 -->
                    <div class="message user-message">
                        <div class="message-content">
                            <div class="message-bubble">
                                <p>What's the current price of SOMI?</p>
                            </div>
                            <div class="message-time">2:32 PM</div>
                        </div>
                        <div class="message-avatar">
                            <img src="assets/logo.png" alt="User" class="avatar-img">
                        </div>
                    </div>

                    <!-- Example AI Response 2 -->
                    <div class="message ai-message">
                        <div class="message-avatar">
                            <img src="assets/logo.png" alt="Senna AI" class="avatar-img">
                        </div>
                        <div class="message-content">
                            <div class="message-bubble">
                                <p>Current market prices:</p>
                                <div class="price-display">
                                    <div class="price-item">
                                        <span class="token">SOMI</span>
                                        <span class="price">$0.254</span>
                                        <span class="change positive">+2.3%</span>
                                    </div>
                                    <div class="price-item">
                                        <span class="token">STT</span>
                                        <span class="price">$0.125</span>
                                        <span class="change positive">+1.8%</span>
                                    </div>
                                </div>
                                <p>Market cap: $25.4M â€¢ 24h volume: $2.4M</p>
                            </div>
                            <div class="message-time">2:32 PM</div>
                        </div>
                    </div>
                </div>

                <!-- Quick Action Buttons -->
                <div class="quick-action-bar">
                    <button class="quick-action-pill" data-action="balance">
                        <i class="fas fa-wallet"></i>
                        Balance
                    </button>
                    <button class="quick-action-pill" data-action="send">
                        <i class="fas fa-paper-plane"></i>
                        Send
                    </button>
                    <button class="quick-action-pill" data-action="price">
                        <i class="fas fa-chart-line"></i>
                        Price
                    </button>
                    <button class="quick-action-pill" data-action="help">
                        <i class="fas fa-question-circle"></i>
                        Help
                    </button>
                </div>

                <!-- Chat Input -->
                <div class="chat-input-container">
                    <div class="input-wrapper">
                        <div class="input-actions">
                            <button class="input-action-btn" id="attachBtn" title="Attach File">
                                <i class="fas fa-paperclip"></i>
                            </button>
                            <button class="input-action-btn" id="emojiBtn" title="Add Emoji">
                                <i class="fas fa-smile"></i>
                            </button>
                        </div>
                        <textarea 
                            id="chatInput" 
                            placeholder="Talk to Senna... Example: 'Send 5 STT to 0xABC...' or 'Show my balance'"
                            rows="1"
                        ></textarea>
                        <button class="send-btn" id="sendMessageBtn" disabled>
                            <i class="fas fa-paper-plane"></i>
                        </button>
                    </div>
                    <div class="input-hints">
                        <span>Press Enter to send â€¢ Shift+Enter for new line</span>
                    </div>
                </div>
            </section>
        </main>

        <!-- Loading Indicator -->
        <div class="typing-indicator" id="typingIndicator">
            <div class="typing-dots">
                <span></span>
                <span></span>
                <span></span>
            </div>
            <span>Senna is typing...</span>
        </div>

        <!-- Modals -->
        <!-- Transaction Modal -->
        <div class="modal" id="transactionModal">
            <div class="modal-content">
                <div class="modal-header">
                    <h3>Confirm Transaction</h3>
                    <button class="modal-close" id="closeTransactionModal">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="transaction-details" id="transactionDetails">
                        <!-- Transaction details will be populated here -->
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" id="cancelTransaction">Cancel</button>
                    <button class="btn btn-primary" id="confirmTransaction">Confirm & Send</button>
                </div>
            </div>
        </div>

        <!-- Notification System -->
        <div class="notification-container" id="notificationContainer"></div>
    </div>

    <script src="app.js"></script>
</body>
</html>